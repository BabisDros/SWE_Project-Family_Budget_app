<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <!-- Surplus Amount Display -->
    <TextView
        android:id="@+id/tv_surplus_amount_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Surplus Amount:"
        android:textSize="16sp"
        android:layout_marginBottom="8dp"/>

    <TextView
        android:id="@+id/tv_surplus_amount"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="0.00"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_marginBottom="16dp"/>

    <!-- Moneybox Selection -->
    <TextView
        android:id="@+id/tv_select_moneybox_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Select Moneybox:"
        android:textSize="16sp"
        android:layout_marginBottom="8dp"/>

    <Spinner
        android:id="@+id/spinner_moneybox"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"/>

    <!-- Amount to Add -->
    <TextView
        android:id="@+id/tv_enter_amount_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Enter Amount to Add:"
        android:textSize="16sp"
        android:layout_marginBottom="8dp"/>

    <EditText
        android:id="@+id/allocate_amount"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="numberDecimal"
        android:hint="Enter amount"
        android:layout_marginBottom="16dp"/>

    <!-- Add to Moneybox Button -->
    <Button
        android:id="@+id/btn_add_to_moneybox"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Add to Moneybox"/>

    <!-- Done -->
    <Button
        android:id="@+id/btn_allocate_done"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Done"/>

</LinearLayout>
